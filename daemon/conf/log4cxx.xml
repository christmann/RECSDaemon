<?xml version="1.0" encoding="UTF-8" ?>
 <log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
  <!-- Output the log message to system console.
    -->
  <appender name="appxConsoleAppender" class="org.apache.log4j.ConsoleAppender">    
    <param name="Target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{HH:mm:ss.SSS} %-5level %logger{3.} - %m%n"/>
        </layout>
  </appender>
  
  <appender name="appxRollingAppenderSize" class="org.apache.log4j.RollingFileAppender">
    <param name="file" value="logs/RECSDaemon.log"/>
    <param name="append" value="true"/>
    <param name="MaxFileSize" value="512KB"/>
    <param name="MaxBackupIndex" value="5"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%-5p %d %c{3.} - %m%n"/>
    </layout>
  </appender>

  <root>
        <priority value="all" />
        <appender-ref ref="appxConsoleAppender"/>
        <appender-ref ref="appxRollingAppenderSize"/>
  </root>
 </log4j:configuration>